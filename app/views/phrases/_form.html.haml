= form_for @phrase do |f|
  - if @phrase.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phrase.errors.count, "error")} prohibited this phrase from being saved:"
      %ul
        - @phrase.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :boy
    = f.text_field :boy
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :line
    = f.text_field :line
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :number
    = f.number_field :number
  .actions
    = f.submit 'Save'
